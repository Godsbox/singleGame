<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 选项卡布局样式 -->
    <style name="TabLayout">
        <item name="android:id">@id/tab_layout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tab_height</item>
        <item name="android:background">@color/primary</item>
        <item name="tabTextAppearance">@style/TabLayout.TextAppearance</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="elevation">0dp</item>
        <item name="tabTextColor">@color/tab_text_color</item>
        <item name="tabSelectedTextColor">@color/tab_text_selected_color</item>
        <item name="tabIndicatorColor">@color/tab_text_selected_color</item>
    </style>

    <!-- 选项卡布局样式  下载-->
    <style name="TabLayout.Download">
        <item name="android:id">@id/tab_layout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tab_height</item>
        <item name="android:background">@color/white</item>
        <item name="tabTextAppearance">@style/TabLayout.TextAppearance</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="elevation">0dp</item>
        <item name="tabTextColor">@color/font_black_deep</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabIndicatorColor">@color/primary</item>
    </style>

    <!-- 选项卡布局样式  下载-->
    <style name="TabLayout.CircleDetail">
        <item name="android:id">@id/tab_layout</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tab_height</item>
        <item name="android:background">@color/white</item>
        <item name="tabTextAppearance">@style/TabLayout.TextAppearance</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="elevation">0dp</item>
        <item name="tabTextColor">@color/font_gray_fans</item>
        <item name="tabSelectedTextColor">@color/font_black</item>
        <item name="tabIndicatorColor">@color/primary</item>
    </style>


    <!-- 选项卡布局的文字外观样式 -->
    <style name="TabLayout.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>