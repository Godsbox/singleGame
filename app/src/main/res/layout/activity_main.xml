<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/work_bg">

    <ImageView
        android:id="@+id/work_start_bg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/logo"
        android:visibility="gone"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:src="@mipmap/shanyi_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/work_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/work_info"
        android:layout_marginBottom="58dp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/work_info"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <include layout="@layout/app_view_work_info"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_below="@+id/work_info"
        android:layout_marginLeft="38dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/open"
            android:src="@mipmap/open"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>
