<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/work_bg">

    <ImageView
        android:id="@+id/work_start_bg"
        android:scaleType="centerCrop"
        android:src="@mipmap/work_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/logo"
        android:visibility="visible"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/shanyi_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/work_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/work_info"
        android:src="@mipmap/work_title"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/work_info"
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <include layout="@layout/app_view_work_info"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/work_info">

        <ImageView
            android:id="@+id/open"
            android:textSize="16sp"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <View
            android:layout_width="36dp"
            android:layout_height="1dp"/>

        <ImageView
            android:id="@+id/more"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/app_selector_ellipse_round_more_work"/>

    </LinearLayout>

</RelativeLayout>
