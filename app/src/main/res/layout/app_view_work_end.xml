<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/work_bg">

    <ImageView
        android:id="@+id/work_end_bg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:visibility="gone"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="25dp"
        android:src="@mipmap/shanyi_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/work_info"
        android:orientation="vertical"
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <include layout="@layout/app_view_work_info"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:paddingTop="60dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/work_info"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/again"
            android:textSize="16sp"
            android:gravity="right"
            android:layout_height="38dp"
            android:layout_width="118dp"
            android:src="@drawable/app_selector_ellipse_round_again_open_work"/>

        <View
            android:layout_width="38dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/more"
            android:layout_height="38dp"
            android:layout_width="118dp"
            android:src="@drawable/app_selector_ellipse_round_more_work"/>

    </LinearLayout>

</RelativeLayout>
