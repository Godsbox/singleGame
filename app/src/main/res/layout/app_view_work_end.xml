<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/work_bg">

    <ImageView
        android:id="@+id/work_end_bg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:visibility="gone"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="25dp"
        android:src="@mipmap/shanyi_logo"
        android:layout_marginBottom="38dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/work_title"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/work_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/enter"
        android:layout_centerHorizontal="true"/>
    <View
        android:id="@+id/enter"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/work_info"
        android:orientation="vertical"
        android:layout_marginTop="26dp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <include layout="@layout/app_view_work_info"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="68dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <ImageView
            android:id="@+id/again"
            android:src="@mipmap/again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="36dp"
            android:layout_height="match_parent"/>


        <ImageView
            android:id="@+id/more"
            android:src="@mipmap/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>
