<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/work_bg"
    android:background="@mipmap/work_end_bg">

    <ImageView
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:src="@mipmap/shanyi_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/title"
        android:layout_marginTop="90dp"
        android:src="@mipmap/work_end_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/work_info"
        android:orientation="vertical"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <include layout="@layout/app_view_work_info"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/work_information"
        android:orientation="vertical"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@string/work_finish_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font_black_fans"
            android:lineSpacingMultiplier="1.3"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/again"
            android:textSize="16sp"
            android:text="@string/play_again"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="32dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:background="@drawable/app_selector_ellipse_round_open_work"/>

        <View
            android:layout_width="30dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/more"
            android:textSize="17sp"
            android:text="@string/more_work"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_height="32dp"
            android:layout_width="wrap_content"
            android:textColor="@drawable/app_selector_ellipse_round_more_work"
            android:background="@drawable/app_selector_ellipse_round_more_work"/>

    </LinearLayout>

</RelativeLayout>
